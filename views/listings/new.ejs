<% layout('/layouts/boilerplate') -%>

    <body>
        <%- include('../includes/flash.ejs') %>
        <h2 class=" font-bold text-center text-2xl m-3">Add new listings</h2>
        <form action="/listings" method="post" class="form1" enctype="multipart/form-data">
            <div class="flex flex-col items-center space-x-3 space-y-6">
                <div class=" w-[50%]  mb-3">
                    <label for="title">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" id="title"
                        class="w-[100%] h-9 border border-slate-400 rounded-md title1">
                    <p class="text-sm"></p>
                </div>
                <div class=" w-[50%] mb-3 ">
                    <label for="description">Description</label>
                    <textarea name="listing[description]"
                        class="w-[100%] h-16 border rounded-md border-slate-400 description "
                        id="description"></textarea>
                    <p class="text-sm"></p>
                </div>
                <div class=" w-[50%] grid sm:grid-cols-1 lg:grid-cols-2 space-y-7 lg:space-y-0 lg:space-x-14 ">
                    <div><label for="img">Upload Image</label>
                        <input type="file" name="listing[image]" id='img'
                            class="w-[70%]  border border-slate-400 rounded-md image p-0">
                        <p class="text-sm"></p>
                    </div>
                    <div><label for="img">Select Category</label>
                        <select name="listing[category]" id="category" class="border border-slate-400 rounded-md category">
                            <option value="none" selected disabled hidden>Choose</option>
                            <option value="Mountain">Mountain</option>
                            <option value="Treehouse">Treehouse</option>
                            <option value="Desert">Desert</option>
                            <option value="Island">Island</option>
                            <option value="BeachFront">BeachFront</option>
                            <option value="Hill Station">Hill Station</option>
                            <option value="Others">Others</option>
                        </select>
                        <p class="text-sm"></p>
                    </div>

                </div>
                <div class=" w-[50%]  mb-3">
                    <label for="price">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" id='price'
                        class="w-[100%] h-9 border border-slate-400 rounded-md price">
                    <p class="text-sm"></p>

                </div>
                <div class=" w-[50%]  mb-3">
                    <label for="location">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter loaction" id="location"
                        class="w-[100%] h-[75%] border border-slate-400 rounded-md location">
                    <p class="text-sm"></p>

                </div>
                <div class=" w-[50%]  mb-3">
                    <label for="country">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" id="country"
                        class="w-[100%] h-9 border border-slate-400 rounded-md country">
                    <p class="text-sm"></p>
                </div>
                <button type="submit"
                    class="max-w-[140px] py-2 px-4 flex justify-center items-center  bg-red-600 hover:bg-red-700 focus:ring-red-500 focus:ring-offset-red-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg ">
                    <svg width="20" height="20" fill="currentColor" class="mr-2" viewBox="0 0 1792 1792"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M1344 1472q0-26-19-45t-45-19-45 19-19 45 19 45 45 19 45-19 19-45zm256 0q0-26-19-45t-45-19-45 19-19 45 19 45 45 19 45-19 19-45zm128-224v320q0 40-28 68t-68 28h-1472q-40 0-68-28t-28-68v-320q0-40 28-68t68-28h427q21 56 70.5 92t110.5 36h256q61 0 110.5-36t70.5-92h427q40 0 68 28t28 68zm-325-648q-17 40-59 40h-256v448q0 26-19 45t-45 19h-256q-26 0-45-19t-19-45v-448h-256q-42 0-59-40-17-39 14-69l448-448q18-19 45-19t45 19l448 448q31 30 14 69z">
                        </path>
                    </svg>
                    Submit
                </button>
            </div>
        </form>
    </body>